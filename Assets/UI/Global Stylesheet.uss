.primary-container {
    background-color: rgb(243, 229, 215);
    width: auto;
    border-bottom-color: rgb(60, 147, 180);
    border-left-color: rgb(60, 147, 180);
    border-right-color: rgb(60, 147, 180);
    border-top-color: rgb(60, 147, 180);
    border-left-width: 10px;
    border-right-width: 10px;
    border-top-width: 10px;
    border-bottom-width: 10px;
    border-top-left-radius: 10px;
    border-bottom-left-radius: 10px;
    border-top-right-radius: 10px;
    border-bottom-right-radius: 10px;
    padding-left: 40px;
    padding-right: 40px;
    padding-top: 40px;
    padding-bottom: 40px;
    height: auto;
}

.base-text {
    -unity-font-style: italic;
    color: rgb(255, 255, 255);
    -unity-text-align: upper-left;
    white-space: normal;
    -unity-text-outline-width: 2px;
    -unity-font: url('project://database/Assets/Game%20Assets/Fonts/OdibeeSans-Regular.ttf?fileID=12800000&guid=94c91e133c0f88c438ef55128a1cd703&type=3#OdibeeSans-Regular');
    -unity-font-definition: none;
}

.center {
    align-items: center;
    justify-content: center;
    height: 100%;
}

.menu-button {
    width: 325px;
    padding-top: 20px;
    padding-bottom: 20px;
    background-color: rgb(41, 153, 201);
    font-size: 32px;
    border-top-left-radius: 20px;
    border-bottom-left-radius: 20px;
    border-top-right-radius: 20px;
    border-bottom-right-radius: 20px;
    position: relative;
    right: auto;
    top: auto;
    left: auto;
    bottom: auto;
}

.active {
    background-color: rgb(169, 206, 48);
}

.stat-container {
    flex-direction: row;
    margin-right: 20px;
}

.stat-name {
    background-color: rgb(17, 223, 45);
    -unity-font: url('project://database/Assets/Game%20Assets/Fonts/OdibeeSans-Regular.ttf?fileID=12800000&guid=94c91e133c0f88c438ef55128a1cd703&type=3#OdibeeSans-Regular');
    -unity-font-definition: none;
    -unity-font-style: bold;
    font-size: 30px;
    -unity-text-align: upper-center;
    padding-left: 15px;
    padding-right: 15px;
    padding-top: 15px;
    padding-bottom: 15px;
    margin-left: 0;
    margin-right: 0;
    margin-top: 0;
    margin-bottom: 0;
}

.stat-value {
    -unity-font: url('project://database/Assets/Game%20Assets/Fonts/OdibeeSans-Regular.ttf?fileID=12800000&guid=94c91e133c0f88c438ef55128a1cd703&type=3#OdibeeSans-Regular');
    -unity-font-definition: none;
    font-size: 30px;
    -unity-font-style: bold;
    color: rgb(255, 255, 255);
    background-color: rgb(0, 0, 0);
    -unity-text-align: upper-center;
    padding-left: 15px;
    padding-right: 15px;
    padding-top: 15px;
    padding-bottom: 15px;
    margin-left: 0;
    margin-right: 0;
    margin-top: 0;
    margin-bottom: 0;
}
